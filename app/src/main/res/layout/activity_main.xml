<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FF35FBE6">
    <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            app:cardElevation="30dp"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="30dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/board"
                android:id="@+id/imageView"
                android:scaleType="fitCenter"/>
        <android.support.v7.widget.GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rowCount="3"
                app:columnCount="3">

            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView11"
                    app:layout_column="0"
                    app:layout_row="0"
                    android:tag="1"
                    android:onClick="dropIn"
                    tools:srcCompat="@drawable/cross"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView12"
                    app:layout_column="1"
                    app:layout_row="0"
                    android:tag="2"
                    android:onClick="dropIn"
                    tools:srcCompat="@drawable/cross"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView13"
                    app:layout_column="2"
                    app:layout_row="0"
                    android:tag="3"
                    android:onClick="dropIn"
                    tools:srcCompat="@drawable/cross"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView14"
                    app:layout_column="0"
                    app:layout_row="1"
                    android:tag="4"
                    android:onClick="dropIn"
                    tools:srcCompat="@drawable/cross"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView15"
                    app:layout_column="1"
                    app:layout_row="1"
                    android:tag="5"
                    android:onClick="dropIn"
                    tools:srcCompat="@drawable/zero"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView16"
                    app:layout_column="2"
                    app:layout_row="1"
                    android:tag="6"
                    android:onClick="dropIn"
                    tools:srcCompat="@drawable/cross"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView17"
                    app:layout_column="0"
                    app:layout_row="2"
                    android:tag="7"
                    android:onClick="dropIn"
                    tools:srcCompat="@drawable/zero"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView18"
                    app:layout_column="1"
                    app:layout_row="2"
                    android:tag="8"
                    android:onClick="dropIn"
                    tools:srcCompat="@drawable/cross"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/imageView19"
                    app:layout_column="2"
                    app:layout_row="2"
                    android:tag="9"
                    android:onClick="dropIn"
                    tools:srcCompat="@drawable/cross"/>
        </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="310dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            app:cardElevation="50dp"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="50dp"
            app:cardBackgroundColor="#FFBD231B" android:visibility="invisible">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="play again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button22" android:onClick="playAgain"
                    android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp" android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp" android:paddingLeft="30dp" android:paddingRight="30dp"
                    android:paddingTop="10dp" android:paddingBottom="10dp" android:textStyle="bold"
                    android:textSize="24sp" android:textColor="#FF8A0404" android:background="#FFFB97BB"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView21" android:textSize="30sp"
                    android:textColor="#FFFFCC02" android:padding="20dp"
                    android:textAlignment="center"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>